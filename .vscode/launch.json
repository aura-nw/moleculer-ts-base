  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "runtimeVersion": "16.14.0",
      "name": "Debug",
      "runtimeExecutable": "ts-node",
      "program": "${workspaceRoot}/node_modules/moleculer/bin/moleculer-runner.mjs",
      "sourceMaps": true,
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "args": ["--env", "src/services/**/*.service.ts"]
    }
